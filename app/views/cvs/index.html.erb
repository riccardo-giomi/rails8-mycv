<% content_for :title, "CVs" %>

<% content_for :nav_left do %>
  <%= render partial: "layouts/controls/top_page" %>
  <%= render partial: "layouts/controls/bottom_page" %>
<% end %>

<% content_for :nav_right do %>
  <%= render partial: "layouts/controls/new_cv" %>
<% end %>

<div id="cvs" class="min-w-full">
  <% cache @cvs do%>
    <% if @cvs.any? %>
      <% @cvs.each do |cv| %>
        <% cache cv do %>
          <%= render partial: "abstract", locals: { cv: }%>
        <% end %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No cvs found.</p>
    <% end %>
  <% end %>
</div>
