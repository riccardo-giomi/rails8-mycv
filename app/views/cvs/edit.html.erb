<% content_for :title, "Editing CV" %>

<% content_for :nav_left do %>
  <%= render partial: "layouts/controls/top_page_link" %>
  <%= render partial: "layouts/controls/bottom_page_link" %>
  <%= link_to "To index", cvs_path, class: "button" %>
<% end %>

<% content_for :nav_right do %>
  <button class="js-only button-green" style="display: none;">Save</button>
  <%= render partial: "layouts/controls/download_json", locals: { cv: @cv } %>
  <%= render partial: "layouts/controls/preview_link", locals: { cv: @cv } %>
<% end %>

<%= form_with(model: @cv, class: "contents") do |form| %>
  <div class="w-full">
    <div class="w-full mt-2 mb-14">
      <% if @cv.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
          <h2><%= pluralize(@cv.errors.count, "error") %> prohibited this cv from being saved:</h2>

          <ul class="list-disc ml-6">
            <% @cv.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <div class="metadata border-2 border-dotted border-gray-500 p-2 mb-2">
        <h2 class="font-bold text-2xl">Other CV data</h2>
        <div class="sm:grid sm:grid-cols-3 sm:gap-2">
          <div>
            <div class="mt-1">
              <%= form.label :base_filename, "Default name for files, without extension", class: "small-label" %>
              <%= form.text_field :base_filename, class: "small-input-field w-full"  %>
            </div>
            <div class="mt-1">
              <%= form.label :language, "CV Language", class: "small-label" %>
              <%= form.text_field :language, class: "small-input-field w-full" %>
            </div>
          </div>
          <div class="mt-1 col-span-2">
            <%= form.label :notes, class: "small-label" %>
            <%= form.text_area :notes, class: "small-input-field w-full h-3/4" %>
          </div>
        </div>
      </div>

      <div class="flex mb-2"><%= form.submit "Save", class: "nojs-only button-green mx-auto" %></div>

      <div class="curriculum border-2 border-dashed border-gray-500 p-2 m-0">
        <div class="header p-1 rounded-lg border-2 border-gray-400">
          <div class="my-1">
            <%= form.text_field :name, class: "input-field font-bold text-xl sm:text-2xl md:text-3xl", placeholder: "Name" %>
          </div>

          <div class="my-1">
            <%= form.text_field :intro_line, class: "input-field font-bold text-gray-500 text-lg sm:text-xl md:text-2xl", placeholder: 'Specialization or one-line intro (e.g. "developer")' %>
          </div>

          <hr class="mt-2">

          <div class="flex gap-2">
            <div class="pt-1 flex items-center">
              <%= render contact_icon_partial(:email) %>
            </div>
            <%= form.text_field :email_address, class: "w-full input-field", placeholder: "Email address" %>
          </div>

          <%= form.fields_for :contacts do |subform| %>
            <div class="flex gap-2">
              <div class="pt-1 flex items-center">
                <%= render contact_icon_partial(subform.object.contact_type) %>
              </div>
              <%= subform.text_field :value, class: "w-full small-input-field" %>
              <%= subform.select :contact_type, Contact::TYPES, {}, { class: "small-input-field w-auto" } %>
              <%= form.button id: "delete-contact-button", name: "delete_contact", value: subform.object.id, class: "button-red mt-1", data: { turbo_confirm: "Are you sure?" } do %>
                <svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
              <% end %>
            </div>
          <% end %>

          <div class="mt-2">
            <%= form.button id: "add-contact-button", name: "add_contact", class: "button" do %>
              <svg class="size-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>

        <div class="mt-2">

          <div class="p-1 border-2 border-gray-400 rounded-lg sm:flex sm:justify-between">
            <div class="education sm:w-3/5">

              <%= form.text_field :education_label, class: "custom-input-field p-1 font-bold text-lg sm:text-xl md:text-2xl", placeholder: "Change/translate label"%>

              <%= form.fields_for :education_items do |subform| %>
                <div class="flex mt-2">
                  <div class="w-full">
                    <%= subform.text_field :name, class: "input-field font-bold w-full", placeholder: "Degree or qualification" %>
                    <%= subform.text_field :location, class: "small-input-field w-full font-medium text-gray-500", placeholder: "Institution/Entity" %>
                    <%= subform.text_field :date, class: "small-input-field italic w-full text-gray-500", placeholder: "Date e.g. 2007, March 1999" %>
                  </div>
                  <div class="ml-1 flex flex-col justify-center">
                    <%= form.button id: "delete-education-item-button", name: "delete_education_item", value: subform.object.id, class: "button-red my-1", data: { turbo_confirm: "Are you sure?" } do %>
                      <svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <div class="mt-1 text-center">
                <%= form.button id: "add-education-item-button", name: "add_education_item", class: "button" do %>
                  <svg class="size-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </div>

            <div class="languages self-end">
              <%= form.text_field :languages_label, class: "custom-input-field p-1 font-bold text-lg sm:text-xl md:text-2xl", placeholder: "Change/translate label"%>
              <%= form.fields_for :languages do |subform| %>
                <div class="flex mt-2">
                  <div class="w-full">
                    <%= subform.text_field :name, class: "small-input-field w-full mr-1 font-bold", placeholder: "Language" %>
                    <%= subform.text_field :level, class: "small-input-field w-1/2 font-medium text-gray-500", placeholder: "Level" %>
                  </div>
                  <div class="ml-1 flex flex-col justify-center">
                    <%= form.button id: "delete-language-button", name: "delete_language", value: subform.object.id, class: "button-red my-1", data: { turbo_confirm: "Are you sure?" } do %>
                      <svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <div class="mt-1 text-center">
                <%= form.button id: "add-language-button", name: "add_language", class: "button" do %>
                  <svg class="size-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>

          <div class="mt-2 border-2 border-dotted border-gray-400 p-2 flex gap-2">
            <%= page_break_checkbox(@cv, "after_education", class: "checkbox") %>
            <span class="italic font-medium">Insert Page Break Here</span>
          </div>

          <div class="summary mt-2 p-1 border-2 border-gray-400 rounded-lg">
            <%= form.text_field :intro_text_label, class: "custom-input-field p-1 font-bold text-lg sm:text-xl md:text-2xl", placeholder: "Change/translate label"%>

            <div class="mt-2">
              <%= form.text_area :intro_text, class: "input-field h-auto", rows: 10 %>
            </div>
          </div>

          <div class="mt-2 border-2 border-dotted border-gray-400 p-2 flex gap-2">
            <%= page_break_checkbox(@cv, "after_intro_text", class: "checkbox") %>
            <span class="italic font-medium">Insert Page Break Here</span>
          </div>

          <div class="experiences mt-2 p-1 border-2 border-gray-400 rounded-lg">
            <div class="mt-1 sm:mt-0 sm:flex sm:gap-2 sm:place-items-center">
              <%= form.text_field :work_experience_label, class: "custom-input-field w-full p-1 font-bold text-lg sm:text-xl md:text-2xl", placeholder: "Change/translate label"%>
              <div class="mt-2 sm:mt-0 w-full p-2 border-2 border-dotted border-gray-400">
                <%= form.label :work_experience_continues_label, "Shown if the print layout separates experiences", class: "small-label" %>
                <%= form.text_field :work_experience_continues_label, class: "small-input-field w-full"%>

                <%= form.label :work_experience_continued_label, "Title of experiences section starting on a new print layout page", class: "small-label" %>
                <%= form.text_field :work_experience_continued_label, class: "small-input-field w-full"%>
              </div>
            </div>

            <% work_experiences_count = @cv.work_experiences.count %>
            <%= form.fields_for :work_experiences do |subform| %>
              <div class="mt-2">
                <div class="w-full">
                  <%= subform.text_field :title, class: "input-field font-bold font-bold text-xl", placeholder: "Position/title" %>
                  <%= subform.text_field :entity, class: "input-field w-full font-bold text-lg text-gray-500", placeholder: "Company/Entity" %>
                  <%= subform.text_field :entity_uri, class: "small-input-field italic w-full", placeholder: "URI for company/entity" %>
                  <%= subform.text_field :period, class: "input-field font-semibold text-md text-gray-500", placeholder: "Period, e.g. 2000-2010" %>
                  <%= subform.text_area  :description, class: "input-field h-auto", placeholder: "Title/job description", rows: 10 %>

                  <% if subform.object.has_tags? %>
                    <div class="mt-2">
                      <% subform.object.tags_array.each do |tag| %>
                        <div class="pill"><span><%= tag %></span></div>
                      <% end %>
                    </div>
                  <% end %>
                  <%= subform.text_field :tags, class: "small-input-field italic w-full", placeholder: "e.g. Ruby,Ruby on Rails,PostgreSQL" %>
                </div>

                <div class="flex gap-2">
                  <%= form.button id: "delete-work-experience-button", name: "delete_work_experience", value: subform.object.id, class: "button-red my-1", data: { turbo_confirm: "Are you sure?" } do %>
                    <svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                  <% end %>

                  <% if subform.options[:child_index] > 0 %>
                    <%= form.button id: "move-up-work-experience-button", name: "move_up_work_experience", value: subform.object.id, class: "button my-1" do %>
                      <svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
                      </svg>
                    <% end %>
                  <% end %>
                  <% if subform.options[:child_index] < (work_experiences_count - 1) %>
                    <%= form.button id: "move-down-work-experience-button", name: "move_down_work_experience", value: subform.object.id, class: "button my-1" do %>
                      <svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>

                <% if subform.options[:child_index] < (work_experiences_count - 1) %>
                <div class="w-full my-1 border-2 border-dotted border-gray-400 p-2 flex gap-2">
                  <%= page_break_checkbox(@cv, "after_work_experience", position: subform.options[:child_index], class: "checkbox") %>
                  <span class="italic font-medium">Insert Page Break Here</span>
                </div>
                <% end %>
              </div>
            <% end %>
            <div class="mt-1 text-center">
              <%= form.button id: "add-work-experience-button", name: "add_work_experience", class: "button" do %>
                <svg class="size-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>

          </div>
        </div>
      </div>

      <div class="flex mt-2"><%= form.submit "Save", class: "nojs-only button-green mx-auto" %></div>
    </div>

  </div>

<% end %>
