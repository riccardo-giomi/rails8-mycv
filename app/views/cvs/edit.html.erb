<% content_for :title, "Editing CV" %>

<%= form_with(model: @cv, class: "contents") do |form| %>
  <div class="w-full relative">
    <div class="w-full mt-2 mb-14">
      <% if @cv.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
          <h2><%= pluralize(@cv.errors.count, "error") %> prohibited this cv from being saved:</h2>

          <ul class="list-disc ml-6">
            <% @cv.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="metadata border border-dotted p-2 mb-2">
        <h2 class="font-bold text-2xl">Metadata (not included in the CV itself)</h2>
        <div class="sm:grid sm:grid-cols-3 sm:gap-2">
          <div>
            <div class="mt-1">
              <%= form.label :base_filename, "Default name for files, without extension", class: "small-label" %>
              <%= form.text_field :base_filename, class: "small-input-field w-full"  %>
            </div>
            <div class="mt-1">
              <%= form.label :language, class: "small-label" %>
              <%= form.text_field :language, class: "small-input-field w-full" %>
            </div>
          </div>
          <div class="mt-1 col-span-2">
            <%= form.label :notes, class: "small-label" %>
            <%= form.text_area :notes, class: "small-input-field w-full h-3/4" %>
          </div>
        </div>
      </div>


      <div class="curriculum border border-dashed p-2">
        <div class="header p-1 rounded-lg border border-gray-500 p-2">
          <div class="my-1">
            <%= form.text_field :name, class: "input-field sm:font-bold sm:text-2xl", placeholder: "Name" %>
          </div>

          <div class="my-1">
            <%= form.text_field :intro_line, class: "input-field sm:font-bold sm:text-lg", placeholder: 'Specialization or one-line intro (e.g. "developer")' %>
          </div>

          <hr class="mt-2">

          <div class="flex gap-2">
            <%= render contact_icon_partial(:email) %>
            <%= form.text_field :email_address, class: "input-field", placeholder: "Email address" %>
          </div>

          <%= form.fields_for :contacts do |contact_fields| %>
            <div class="flex gap-2">
              <%= render contact_icon_partial(contact_fields.object.contact_type) %>
              <%= contact_fields.text_field :value, class: "input-field" %>
              <%= contact_fields.select :contact_type, Contact::TYPES, {}, { class: "small-input-field w-auto" } %>
              <%= form.button id: "delete-contact-button", name: "delete_contact", value: contact_fields.object.id, class: "icon-button-red my-1", data: { turbo_confirm: "Are you sure?" } do %>
                <svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
              <% end %>
            </div>
          <% end %>

          <div class="mt-2">
            <%= form.button id: "add-contact-button", name: "add_contact", class: "icon-button" do %>
              <svg class="size-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>

        <div class="summary mt-2">
          <h2 class="font-bold text-2xl">Career Summary</h2>

          <div class="my-2">
            <%= form.text_area :intro_text, class: "input-field h-auto", rows: 8 %>
          </div>
        </div>
      </div>
    </div>

    <div class=" w-4xl mx-auto h-12 text-center fixed bg-white bottom-0 right-0 left-0 flex flex-row justify-between">
      <div class="space-x-2">
        <%= form.submit "Save", class: "button-green" %>
        <%= link_to "Back", cvs_path, class: "button" %>
        <%= link_to "Preview", @cv, class: "button" %>
      </div>
      <div class="justify-self-end-safe">
      <%= link_to "back to top", "#", class: "button" %>
      </div>
    </div>
  </div>
<% end %>
