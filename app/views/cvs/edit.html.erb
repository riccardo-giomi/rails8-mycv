<% content_for :title, "Editing CV" %>

<%= form_with(model: @cv, class: "contents") do |form| %>
  <div class="w-full relative">
    <div class="w-full mt-2 mb-14">
      <% if @cv.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
          <h2><%= pluralize(@cv.errors.count, "error") %> prohibited this cv from being saved:</h2>

          <ul class="list-disc ml-6">
            <% @cv.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="metadata border border-dotted p-2 mb-2">
        <h2 class="font-bold text-2xl">Metadata (not included in the CV itself)</h2>
        <div class="sm:grid sm:grid-cols-3 sm:gap-2">
          <div>
            <div class="mt-1">
              <%= form.label :base_filename, "Default name for files, without extension", class: "small-label" %>
              <%= form.text_field :base_filename, class: "small-input-field"  %>
            </div>
            <div class="mt-1">
              <%= form.label :language, class: "small-label" %>
              <%= form.text_field :language, class: "small-input-field" %>
            </div>
          </div>
          <div class="mt-1 col-span-2">
            <%= form.label :notes, class: "small-label" %>
            <%= form.text_area :notes, class: "small-input-field h-3/4" %>
          </div>
        </div>
      </div>


      <div class="curriculum border border-dashed p-2">
        <div class="header p-1 rounded-lg border border-gray-500 p-2">
          <div class="my-1">
            <%= form.text_field :name, class: "input-field sm:font-bold sm:text-2xl", placeholder: "Name" %>
          </div>

          <div class="my-1">
            <%= form.text_field :intro_line, class: "input-field sm:font-bold sm:text-xl", placeholder: 'Specialization or one-line intro (e.g. "developer")' %>
          </div>

          <div class="my-1 flex gap-2">
            <svg class="size-12 inline-block mt-1 fill-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z" />
              <path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z" />
            </svg>
            <%= form.email_field :email_address, class: "input-field", placeholder: "Email address" %>
          </div>
        </div>

        <div class="summary mt-2">
          <h2 class="font-bold text-2xl">Career Summary</h2>

          <div class="my-2">
            <%= form.text_area :intro_text, class: "input-field h-auto", rows: 10 %>
          </div>
        </div>
      </div>
    </div>

    <div class=" w-4xl mx-auto h-12 text-center fixed bg-white bottom-0 right-0 left-0 flex flex-row justify-between">
      <div class="space-x-2">
        <%= form.submit "Save", class: "button-green" %>
        <%= link_to "Cancel", cvs_path, class: "button" %>
        <%= link_to "Preview", @cv, class: "button" %>
      </div>
      <div class="justify-self-end-safe">
      <%= link_to "back to top", "#", class: "button" %>
      </div>
    </div>
  </div>
<% end %>
